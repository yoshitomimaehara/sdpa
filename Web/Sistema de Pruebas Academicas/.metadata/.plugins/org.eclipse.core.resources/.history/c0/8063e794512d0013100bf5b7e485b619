<%@page import="model.AlumnoModel"%>
<%@page import="entity.Alumno"%>
<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
 <%
 Alumno al=new Alumno();
 String idAlumno="",error="";
 if(request.getParameter("BtnConsultar")!=null){
	 	idAlumno=request.getParameter("id");
		try{
			AlumnoModel model = new AlumnoModel();
			al=model.getAlumnoxid(idAlumno);
		}catch(Exception e){
			error=e.getMessage();
		}
 }
 %>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title></title>
</head>
<body>
	<form action="consultaalumno" method="post">
	<label>Ingrese el Codigo</label><input type="text" name="idAlumno"/><input type="button" value="Consultar"/>
	</form>
	<%
	if(request.getParameter("BtnConsultar")!=null && error==""){	
		out.print("<table border=1>");
		out.print("<tr><th>CodAlumno</th><th>Nombre</th><th>Apellidos</th><th>Ciclo</th><th></th></tr>");
		out.print("<tr><td>"+al.getCodalumno()+"</td><td>"+al.getNombre()+"</td><td>"+al.getApellido()+"</td><td>"+al.getCiclo()+"</td></tr>");
		out.print("</table>");
	}
	%>
</body>
</html>